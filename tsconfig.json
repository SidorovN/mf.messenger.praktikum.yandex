{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "es2020",
      "scripthost",
      "es2015.proxy"
    ],
    "outDir": "assets/build",
    "allowSyntheticDefaultImports": true
  },
  "plugins": [
    {
      "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
      "after": true
    }
  ],
  "noImplicitAny": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "alwaysStrict": true,
  "sourceMap": true,
  "strictNullChecks": true,
  "exclude": [
    "node_modules"
  ]
}
